<div class="header-1main">
  <div class="parant">
    <img class="footer1logo" src="{{ section.settings.footer1logo | image_url }} "/>
    <div>
           <ul class="footer-option">
  {% for link in linklists.footer.links %}
    {% assign child_list_handle = link.title | handleize %}
    {% if linklists[child_list_handle].links != blank %}
        <li class="">
          <a class="" href="{{ link.url }}">{{ link.title }}</a>
         <ul class="">
           {% for childlink in linklists[child_list_handle].links %}
               <li class="" ><a class="" href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
            
          {% endfor %}
         </ul>
        </li>
        {%- for grandchildlink in childlink.links -%}
          <li class="" >
            <a class="" href="{{ grandchildlink.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
              {{ grandchildlink.title | escape }}
            </a>
          </li>
        {%- endfor -%}
    {% else %}
        <li class=""><a class="" href="{{ link.url }}">{{ link.title }}</a></li>
    {% endif %}
{% endfor %}
  </ul>
    </div>
  </div>
</div>
