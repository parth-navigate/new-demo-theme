<div class="main">
  <div class="parent">
    <div class="mx-header">
      <div class="container">
      <div>
        <img class="footer1logo" src="{{ section.settings.mx-online-logo | image_url }} "/>
      </div>
      <div class="">
            <ul class="">
               {% for link in linklists.main-menu.links %}
               {% assign child_list_handle = link.title | handleize %}
               {% if linklists[child_list_handle].links != blank %}
               <li class="list-style {{ link.title }}" >
                  <a class="linktext" href="{{ link.url }}">{{ link.title }}</a>
                  <ul class="grandclidehideshow">
                     {% for childlink in linklists[child_list_handle].links %}
                     <li class="linktext" ><a class="linktext-2" href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
                     {% endfor %}
                  </ul>
               </li>
               {%- for grandchildlink in childlink.links -%}
               <li class="list-style" >
                  <a class="linktext" href="{{ grandchildlink.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                  {{ grandchildlink.title | escape }}
                  </a>
               </li>
               {%- endfor -%}
               {% else %}
               <li class="list-style"><a class="linktext" href="{{ link.url }}">{{ link.title }}</a></li>
               {% endif %}
               {% endfor %}
            </ul>
         </div>
        <div>
              <a class="signin-button" href="">Sign in</a>
              <img class="header-bar-icon" src="{{ section.settings.mx-search-icon | image_url }} "/>
              <img class="header-bar-icon" src="{{ section.settings.mx-menu-icon | image_url }} "/>
            </div>
      </div>
    </div>
    <div class="mx-banners">
      <div>
        <div class="mx-banner  owl-carousel owl-theme" >
          {%- for block in section.blocks -%}
        <div class="slider">
        <div class="">
          <img class="" src="{{ block.settings.Rectangle444 | image_url  }}">
        </div>
        </div>
          {% endfor %}
        </div>
      </div>
    </div>
    </div>
  
</div>
<style>
  .container{
    display: flex;
    align-items: start;
    justify-content: space-between;
    max-width:1200px;
    margin:auto;
    margin-top:20px;
  }
  .mx-header .list-style{
    padding-left:25px;
  }
  .mx-header .linktext{
    text-transform: uppercase;
        color: white;
  }
  .mx-header{
    position: absolute;
    z-index: 2;
    width:100%;
  }
  .parent{
    position: relative;
  }
  .signin-button{
    border: 2px solid #c9fd0e;
    padding: 3px 15px;
    border-radius: 27px;
    color: white;
  }
  .header-bar-icon{
    width:25px;
    vertical-align: middle;
  }
</style>
{% schema %}
  {
    "name": " header ",
    "settings": [
      {
      "type": "image_picker",
      "id": "mx-online-logo",
      "label": "Mx Online logo"
    },
    {
      "type": "image_picker",
      "id": "mx-search-icon",
      "label": "Mx search icon"
    },
    {
      "type": "image_picker",
      "id": "mx-menu-icon",
      "label": "Mx menu icon"
    }
    ],
         "blocks": [
  {
    "type": "text",
    "name": "banner-img",
   "settings": [
     {
          "type": "image_picker",
          "id": "Rectangle444",
          "label": "Rectangle444-img"
          }
   ]
  }
  ]
  }
{% endschema %}

