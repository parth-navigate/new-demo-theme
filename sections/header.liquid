<div class="main">
  <div class="parant">
    <div class="section-1">
      <div class="header-icons">
        <div class="mobilemenuicon">
         <img class="onlyheader" src="{{ section.settings.mobilemenuicon | image_url }} "/>
        </div>
          
        <img src="{{ section.settings.logo | image_url }} "/>
        
        <div class="mobilemanuheader">
          <img class="onlyheader" src="{{ section.settings.closeicon | img_url }}"/>
          <ul class="all-option">
            {% for link in linklists.main-menu.links %}
            {% assign child_list_handle = link.title | handleize %}
            {% if linklists[child_list_handle].links != blank %}
              <li class="list-style active">
              <a class="linktext" href="{{ link.url }}">{{ link.title }}</a>
              <img class="onlyheader" src="{{ section.settings.addicon | image_url }}"/>
              <ul class="grandclidehideshow">
            {% for childlink in linklists[child_list_handle].links %}
              <li class="" ><a class="linktext-2" href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
          
            {% endfor %}
              </ul>
              </li>
            {%- for grandchildlink in childlink.links -%}
              <li class="list-style" >
              <a class="linktext-2" href="{{ grandchildlink.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
              {{ grandchildlink.title | escape }}
              </a>
              </li>
            {%- endfor -%}
          
            {% else %}
          
              <li class="list-style"><a class="linktext" href="{{ link.url }}">{{ link.title }}</a></li>
          
          
          {% endif %}
          {% endfor %}
          </ul>
        </div>
        <div>
          <a class="icons" href=""><img src="{{ section.settings.icons | image_url}}"/></a>
          <a class="icons" href=""><img src="{{ section.settings.icons-1 | image_url}}"/></a>
          <a class="icons" href=""><img src="{{ section.settings.icons-2 | image_url}}"/></a>
          <a class="" href=""><img src="{{ section.settings.icons-3 | image_url}}"/></a>
        </div>
      </div>
      
    
        
    </div>
  </div>
</div>

<style>
  .onlyheader{
    display:none;
  }
  .list-style:hover .grandclidehideshow {
  display: block;
}
  .linktext{
    text-decoration: none;
    color:white;
    padding-left:45px;
  }
  .list-style{
    list-style-type: none;
    display: inline-block;
    vertical-align: top;
    position: relative;
  }
  .grandclidehideshow{
    display:none;
    padding:0;
    position: absolute;
    z-index: 5;
    background: white;
    padding: 10px;
    border-radius: 5px;
    width: 100%;
    box-shadow: 2px 2px 2px 2px;
    
  }
  .header-icons{
    display: flex;
    justify-content: space-between;
    background: black;
    align-items: center;
    padding: 15px 20px;
  }
  
  .icons{
    padding-right:10px;
  }
  .owl-carousel{
    display: inherit;
  }
   ul {
  list-style-type: none;
}
  .linktext-2{
    color:black;
    text-decoration: none;
  }
  .mobilemenuicon{
    display:none;
  }
   @media only screen and (min-width: 1024px){
/* For mobile phone: */
 .list-style:hover .grandclidehideshow {
  display: block;
}
   }

  
  @media only screen and (max-width: 500px){
/* For mobile phone: */
    .onlyheader{
    display:block;
    float: right;
  }
  .mobilemanuheader{
    background: gray;
    position: fixed;
    width: 90%;
    left: 0;
    top: 0;
    z-index: 17;
    height: 100%;
  }
  .list-style{
    display: block;
    margin-bottom: 10px;
    padding-left: 0;
    border-bottom: 1px solid black;
    padding-bottom: 13px;
    width: 94%;
  }
  .linktext{
    padding:0;
  }
  .all-option{
    padding-left:25px;
  }
   .list-style:active .grandclidehideshow {
    display: contents;
    }
        .active .grandclidehideshow {
       display: none;
          }
}
  }
</style>
