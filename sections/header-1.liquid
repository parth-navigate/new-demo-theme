<div class="main">
  <div class="parant">
    <div class="section1">
      <div>
        <img src="{{ section.settings.logo | img_url }}"/>
      </div>
<!--       <div>
          {%- for block in section.blocks -%}
          <a class="linktext" href="">{{ block.settings.catagary_text }}</a>
          {% endfor %}
      </div> -->
      <div>
          <ul>
  {% for link in linklists.main-menu.links %}
    {% assign child_list_handle = link.title | handleize %}
    {% if linklists[child_list_handle].links != blank %}
        <li class="list-style">
          <a class="linktext" href="{{ link.url }}">{{ link.title }}</a>
         <ul class="grandclidehideshow">
           {% for childlink in linklists[child_list_handle].links %}
               <li class="linktext" ><a class="linktext" href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
            
          {% endfor %}
         </ul>
        </li>
        {%- for grandchildlink in childlink.links -%}
          <li class="list-style" >
            <a class="linktext" href="{{ grandchildlink.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
              {{ grandchildlink.title | escape }}
            </a>
          </li>
        {%- endfor -%}

      
       
     
    {% else %}
    
        <li class="list-style"><a class="linktext" href="{{ link.url }}">{{ link.title }}</a></li>
      
      
    {% endif %}
{% endfor %}
  </ul>
      </div>
      <div class="potition-1">
        <div class="signup-logo">
          <img src="{{ section.settings.logo-2 | img_url }}"/>
        </div>
        <div class="signup-logo">
          <p>{{ section.settings.signup }}</p>
        </div>
      </div>  
    </div>
  </div>
  
</div>
<style>
   .list-style:hover .grandclidehideshow {
  display: block;
}
  .linktext{
    text-decoration: none;
    list-style-type: none;
    padding:0;
  }
  .list-style{
   position: relative;
    list-style-type: none;
    display: inline-block;
    vertical-align: top;
  }
  .grandclidehideshow{
    display:none;
    padding:0;
    position: absolute;
    z-index: 5;
  }
  .signup-logo{
    padding-right:10px;
    margin:0;
  }
  .potition-1{
    display: flex;
    align-items: center;
  }
  .linktext{
    color:black;
    text-decoration:none;
    padding-left:45px;
  }
  .section1{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:10px 10px;
  }
</style>
